{
  "name": "json-api",
  "version": "1.0.0",
  "description": "JSON API endpoints based on json-api by Ethan Resnick",
  "author": "Joost Lubach",
  "license": "ISC",
  "exports": {
    ".": "./dist/index.js",
    "./testing": "./dist/testing/index.js"
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:tsc && pnpm build:copy",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:copy": "copyfiles -u 1 src/**/*.yml dist",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "chalk": "^3.0.0",
    "content-type": "^1.0.2",
    "doctext": "workspace:^",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "inflected": "^2.0.4",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "url-template": "^2.0.8",
    "validator": "workspace:^",
    "ydeps": "workspace:^",
    "ytil": "workspace:^"
  },
  "peerDependencies": {
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@types/body-parser": "^1.19.2",
    "@types/content-type": "^1.1.2",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/inflected": "^1.1.29",
    "@types/js-yaml": "^4.0.5",
    "@types/supertest": "^6.0.2",
    "@types/url-template": "^2.0.28",
    "copyfiles": "^2.4.1",
    "node-mocks-http": "^1.14.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.4",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6",
    "yest": "workspace:^"
  }
}
