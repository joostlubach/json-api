{
  "name": "json-api",
  "version": "1.0.0",
  "description": "JSON API endpoints based on json-api by Ethan Resnick",
  "author": "Joost Lubach",
  "license": "ISC",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./testing": {
      "require": {
        "types": "./dist/cjs/testing/index.d.ts",
        "default": "./dist/cjs/testing/index.js"
      },
      "import": {
        "types": "./dist/esm/testing/index.d.ts",
        "default": "./dist/esm/testing/index.js"
      }
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "build:esm": "pnpm build:tsc:esm",
    "build:tsc:esm": "tsc -p tsconfig.prod.json --module ESNext --outDir dist/esm",
    "build:cjs": "pnpm build:tsc:cjs",
    "build:tsc:cjs": "tsc -p tsconfig.prod.json --module CommonJS --outDir dist/cjs",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "content-type": "^1.0.2",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "inflected": "^2.0.4",
    "js-yaml": "^4.1.0",
    "url-template": "^2.0.8",
    "validator": "workspace:^",
    "ydeps": "workspace:^",
    "ytil": "workspace:^"
  },
  "peerDependencies": {
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@types/content-type": "^1.1.2",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/inflected": "^1.1.29",
    "@types/js-yaml": "^4.0.5",
    "@types/supertest": "^6.0.2",
    "@types/url-template": "^2.0.28",
    "copyfiles": "^2.4.1",
    "openapi-types": "^12.1.3",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.4",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6",
    "yest": "workspace:^"
  }
}
