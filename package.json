{
  "name": "json-api",
  "version": "1.0.0",
  "description": "JSON API endpoints based on json-api by Ethan Resnick",
  "author": "Joost Lubach",
  "license": "ISC",
  "scripts": {
    "build": "(pnpm build:prepare && pnpm build:tsc && pnpm build:tsc-alias && pnpm build:copy && pnpm build:rsync); pnpm build:cleanup",
    "build:prepare": "test -x .build && rm -rf .build; mkdir -p .build",
    "build:tsc": "tsc -p tsconfig.json --outDir .build/cjs && tsc -p tsconfig.esm.json --outDir .build/esm",
    "build:tsc-alias": "tsc-alias -p tsconfig.json --outDir .build/cjs && tsc-alias -p tsconfig.esm.json --outDir .build/esm",
    "build:copy": "copyfiles -u 1 src/**/*.yml src/**/*.css .build/cjs && copyfiles -u 1 src/**/*.yml src/**/*.css .build/esm",
    "build:rsync": "rsync -uvaz --delete .build/ dist/",
    "build:cleanup": "rm -rf .build",
    "clean": "rimraf dist",
    "test": "NODE_ENV=test jest"
  },
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/cjs/index.d.ts"
    }
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "content-type": "^1.0.2",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "inflected": "^2.0.4",
    "js-yaml": "^4.1.0",
    "url-template": "^2.0.8",
    "ytil": "workspace:^"
  },
  "devDependencies": {
    "@types/content-type": "^1.1.2",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/inflected": "^1.1.29",
    "@types/js-yaml": "^4.0.5",
    "@types/url-template": "^2.0.28",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}
