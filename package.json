{
  "name": "json-api",
  "version": "1.0.0",
  "description": "JSON API endpoints based on json-api by Ethan Resnick",
  "author": "Joost Lubach",
  "license": "ISC",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./testing": {
      "types": "./dist/types/testing/index.d.ts",
      "import": "./dist/esm/testing/index.js",
      "default": "./dist/cjs/testing/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:tsc && pnpm build:copy",
    "build:tsc": "pnpm build:tsc:esm && pnpm build:tsc:cjs",
    "build:tsc:esm": "tsc -p tsconfig.prod.json --module esnext --outDir dist/esm --declarationDir dist/types",
    "build:tsc:cjs": "tsc -p tsconfig.prod.json --module commonjs --outDir dist/cjs --declaration false --declarationMap false",
    "build:copy": "copyfiles -u 1 src/**/*.yml dist",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "chalk": "^3.0.0",
    "content-type": "^1.0.5",
    "doctext": "workspace:^",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "inflected": "^2.1.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "url-template": "^2.0.8",
    "validator": "workspace:^",
    "ydeps": "workspace:^",
    "ytil": "workspace:^"
  },
  "peerDependencies": {
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@types/body-parser": "^1.19.5",
    "@types/content-type": "^1.1.8",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/inflected": "^1.1.29",
    "@types/js-yaml": "^4.0.9",
    "@types/supertest": "^6.0.2",
    "@types/url-template": "^2.0.31",
    "copyfiles": "^2.4.1",
    "node-mocks-http": "^1.14.1",
    "rimraf": "^5.0.5",
    "strip-ansi": "^6.0.1",
    "supertest": "^6.3.4",
    "tsc-alias": "^1.8.8",
    "typescript": "5.4.3",
    "yest": "workspace:^"
  }
}
